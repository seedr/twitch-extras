{
	"name": "Twitch Extras",
	"description": "Adds some simple extras to Twitch",
	"author": "emy",
	"manifest_version": 3,
	"version": "1.0.0",
	"homepage_url": "https://github.com/seedr/twitch-extras",
	"icons": {
		"48": "48.png",
		"128": "128.png"
	},
	"background": {
		"service_worker": "service.js"
	},
	"content_scripts": [{
		"matches": [
			"https://twitch.tv/*",
			"https://*.twitch.tv/*"
		],
		"js": ["main.js"],
		"css": ["main.css"],
		"run_at": "document_idle"
	}],
	"permissions": [
		"tabs",
		"downloads",
		"storage"
	],
	"host_permissions": [
		"*://*.twitchcdn.net/*",
		"https://twitch.tv/*",
		"https://*.twitch.tv/*"
	]
}
